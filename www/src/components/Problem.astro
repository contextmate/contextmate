<section class="py-24 px-6">
  <div class="max-w-4xl mx-auto">
    <!-- Lead statement -->
    <div class="text-center mb-16">
      <h2 class="font-mono text-3xl md:text-4xl font-bold mb-6">
        It's just markdown files. Sync them!
      </h2>
      <p class="text-brand-muted text-lg max-w-2xl mx-auto">
        Dropbox solved file sync a decade ago. Your AI agents store everything in markdown.
        We're doing the same thing for them.
      </p>
    </div>

    <!-- File names floating around agent silos -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-14">
      <!-- Agent 1 -->
      <div class="bg-brand-surface rounded-xl border border-brand-border p-6 text-center">
        <div class="font-mono text-brand-accent text-sm mb-3">Claude Code</div>
        <div class="space-y-2">
          <div class="font-mono text-xs text-brand-muted bg-brand-deep rounded px-3 py-1.5">CLAUDE.md</div>
          <div class="font-mono text-xs text-brand-muted bg-brand-deep rounded px-3 py-1.5">rules/*.md</div>
          <div class="font-mono text-xs text-brand-muted bg-brand-deep rounded px-3 py-1.5">MEMORY.md</div>
        </div>
      </div>

      <!-- Agent 2 -->
      <div class="bg-brand-surface rounded-xl border border-brand-border p-6 text-center">
        <div class="font-mono text-brand-accent text-sm mb-3">OpenClaw</div>
        <div class="space-y-2">
          <div class="font-mono text-xs text-brand-muted bg-brand-deep rounded px-3 py-1.5">IDENTITY.md</div>
          <div class="font-mono text-xs text-brand-muted bg-brand-deep rounded px-3 py-1.5">skills/*.md</div>
          <div class="font-mono text-xs text-brand-muted bg-brand-deep rounded px-3 py-1.5">daily-log.md</div>
        </div>
      </div>

      <!-- Agent 3 -->
      <div class="bg-brand-surface rounded-xl border border-brand-border p-6 text-center">
        <div class="font-mono text-brand-accent text-sm mb-3">Cursor</div>
        <div class="space-y-2">
          <div class="font-mono text-xs text-brand-muted bg-brand-deep rounded px-3 py-1.5">.cursorrules</div>
          <div class="font-mono text-xs text-brand-muted bg-brand-deep rounded px-3 py-1.5">prompts/*.md</div>
          <div class="font-mono text-xs text-brand-muted bg-brand-deep rounded px-3 py-1.5">context.md</div>
        </div>
      </div>
    </div>

    <!-- Punchline -->
    <p class="text-center text-brand-muted text-lg">
      3 agents. 3 memory silos. <span class="text-brand-error">None of them talk to each other.</span>
    </p>
  </div>
</section>
