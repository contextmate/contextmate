{
  "name": "contextmate",
  "version": "0.2.2",
  "description": "Zero-knowledge encrypted sync for AI agent context",
  "type": "module",
  "bin": {
    "contextmate": "./dist/src/bin/contextmate.js"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "ai",
    "agents",
    "sync",
    "encryption",
    "zero-knowledge",
    "mcp",
    "cli",
    "context"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/contextmate/contextmate"
  },
  "homepage": "https://contextmate.dev",
  "author": "Alex Furmansky",
  "scripts": {
    "build": "tsc && chmod +x dist/src/bin/contextmate.js",
    "dev": "tsx watch src/bin/contextmate.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "start": "node dist/src/bin/contextmate.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@noble/ciphers": "^1.2.1",
    "@noble/hashes": "^1.7.1",
    "argon2": "^0.41.1",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "commander": "^13.1.0",
    "smol-toml": "^1.3.1",
    "ws": "^8.18.0",
    "zod": "^3.24.2"
  },
  "optionalDependencies": {
    "better-sqlite3": "^11.8.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.13.1",
    "@types/ws": "^8.5.14",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "license": "MIT"
